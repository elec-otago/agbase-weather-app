<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_item_height"
    android:gravity="center_vertical">
    <!-- alert name -->
    <TextView
        android:id="@+id/alert_listview_item_name"
        android:textSize="@dimen/textsize_24sp"
        android:textColor="@color/primary_text_default_material_light"
        android:layout_marginLeft="@dimen/space_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!-- weather station name -->
    <TextView
        android:id="@+id/alert_listview_item_station"
        android:textColor="@color/secondary_text_default_material_light"
        android:textSize="@dimen/textsize_24sp"
        android:layout_marginLeft="@dimen/space_24dp"
        android:layout_below="@id/alert_listview_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>